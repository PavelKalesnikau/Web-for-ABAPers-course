<mvc:View    
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"     
    xmlns:c="sap.ui.core">
    <Table  items="{bd>/Customers}">
        <columns>
            <Column >
                <Label text="{i18n>CustomerID}" />
            </Column>
            <Column >
                <Label text="{i18n>CompanyName}" />
            </Column>
            <Column >
                <Label text="{i18n>ContactName}" />
            </Column>
            <Column>
                <Label text="{i18n>ContactTitle}" />
            </Column>
            <Column>
                <Label text="{i18n>Address}" />
            </Column>
            <Column>
                <Label text="{i18n>City}" />
            </Column>
            <Column>
                <Label text="{i18n>PostalCode}" />
            </Column>
            <Column>
                <Label text="{i18n>Country}" />
            </Column>
            <Column>
                <Label text="{i18n>Phone}" />
            </Column>
            <Column>
                <Label text="{i18n>Fax}" />
            </Column>
        </columns>
        <items>
         <ColumnListItem>
             <cells>
                 <Text text="{bd>CustomerID}" />
                 <Text text="{bd>CompanyName}" />
                 <Text text="{bd>ContactName}" />                        
                 <Text text="{bd>ContactTitle}" />                        
                 <Text text="{bd>Address}" />                        
                 <Text text="{bd>City}" />                        
                 <Text text="{bd>PostalCode}" />                        
                 <Text text="{bd>Country}" />                        
                 <Text text="{bd>Phone}" />                        
                 <Text text="{bd>Fax}" />                        
             </cells>
         </ColumnListItem>
     </items>
    </Table>
</mvc:View>
